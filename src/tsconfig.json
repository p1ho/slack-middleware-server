{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es5",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./dist",

        "noImplicitAny": true,

        "removeComments": true
    },
    "include": [
        "server/**/*.ts",
        "server/**/*.js", "index.test.js", "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
